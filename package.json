{
  "name": "otp-gen",
  "version": "1.0.0",
  "description": "Command line One Time Password (OTP) generator",
  "main": "index.js",
  "scripts": {
    "cm": "npx git-cz",
    "info": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.build.json",
    "build:module": "",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project tsconfig.build.json",
    "test": "run-s test:build test:lint test:unit",
    "test:build": "rm -frv out && tsc -p tsconfig.json",
    "test:lint": "tslint --project tsconfig.build.json && prettier \"src/**/*.ts\" --list-different",
    "test:unit": "nyc --silent ava",
    "quicktest": "run-s test:build quicktest:unit",
    "quicktest:unit": "nyc --silent ava",
    "docker:build": "docker build -t otp-gen .",
    "integrationtest": "./integration_tests/run_all.sh",
    "integrationtest:clean": "cd integration_tests && rm -frv uncompress*",
    "watch": "SHELL=/bin/sh chokidar --initial -p src -c \"run-s clean test build\"",
    "watch:quicktest": "SHELL=/bin/sh chokidar --initial -p src tests -c \"run-s quicktest\"",
    "watch:test": "SHELL=/bin/sh chokidar --initial -p src tests -c \"run-s test\"",
    "cov": "run-s build test:unit cov:html && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:send": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out build/docs",
    "doc:json": "typedoc src/ --target ES6 --mode file --json build/docs/typedoc.json",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "rm -frv build",
    "all": "run-s reset test cov:check doc:html",
    "prepare-release": "run-s all version doc:publish"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@types/debug": "^4.1.5",
    "@types/inquirer": "^6.5.0",
    "@types/meow": "^5.0.0",
    "@types/node": "^13.7.7",
    "@types/redis": "^2.8.16",
    "@types/update-notifier": "^4.1.0",
    "@types/yargs": "^15.0.4",
    "ava": "^3.5.0",
    "chokidar-cli": "^2.1.0",
    "codecov": "^3.7.1",
    "cz-conventional-changelog": "^3.1.0",
    "gh-pages": "^2.2.0",
    "md5-file": "^4.0.0",
    "nock": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "open-cli": "^6.0.1",
    "otpts": "^2.0.0",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "standard-version": "^8.0.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typedoc": "^0.16.11"
  },
  "dependencies": {
    "@otplib/core": "^12.0.1",
    "@otplib/plugin-thirty-two": "^12.0.1",
    "debug": "^4.1.1",
    "otplib": "^12.0.1",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
